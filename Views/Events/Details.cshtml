@{
    ViewData["Title"] = "Details";
}

<div class="row my-center">
    <h2>
        @Model.Champ.ChampName - Round @Model.RoundNumber
    </h2>
</div>
<div class="row">
    <span class="col upcoming-track">
        @Model.TrackName
    </span>
</div><hr />
