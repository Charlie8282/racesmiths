                <form asp-controller="Champs" asp-action="Create" enctype="multipart/form-data">
                    <input type="hidden" name="ClubId" value="@Model.Id" />

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @*<div class="form-group">
